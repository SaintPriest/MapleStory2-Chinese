	<state name="전투시작">
		<onEnter>
			<action name="LockMyPC" isLock="0" />
		</onEnter>
		<condition name="WaitTick" waitTick="1000" >
			<transition state="스폰대사"/>
		</condition>
	</state>
	
	<state name="스폰대사">
		<onEnter>
			<action name="AddBalloonTalk" spawnPointID="102" msg="$83000002_COLOSSEUM__ROUND2__3$" duration="3000" />
			<action name="타이머를설정한다" arg1="LimitTimer" arg2="60" arg3="1"/>
			<action name="SetNpcDuelHpBar" isOpen="true" spawnPointID="102" durationTick="60000" npcHpStep="10" />
		</onEnter>
		<condition name="몬스터가죽어있으면" arg1="102" >
			<action name="AddBalloonTalk" spawnPointID="102" msg="$83000002_COLOSSEUM__ROUND2__4$" duration="3000" />
			<action name="SetNpcDuelHpBar" isOpen="false" spawnPointID="102" />			
			<transition state="ClearRoundDelay" />		
		</condition>
		
		<condition name="시간이경과했으면" arg1="LimitTimer" >
			<!-- <action name="이벤트UI를설정한다" arg1="1" arg2="경기시간이 경과했습니다. 도전에 실패 하였습니다. 전투를 종료합니다." arg3="3000" /> -->
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_switchon" script="$83000002_COLOSSEUM__ROUND2__5$" duration="3000" />				
			<action name="몬스터소멸시킨다" arg1="102" />
			<action name="SetNpcDuelHpBar" isOpen="false" spawnPointID="102" />
			<transition state="FailRoundDelay"/>
		</condition>		

		<condition name="유저를감지했으면" arg1="902" >
			<!-- <action name="이벤트UI를설정한다" arg1="1" arg2="경기장을 이탈했습니다. 전투가 종료됩니다. 다시 도전해 주세요." arg3="3000" /> -->
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_switchon" script="$83000002_COLOSSEUM__ROUND2__6$" duration="3000" />							
			<action name="몬스터소멸시킨다" arg1="102" />
			<action name="SetNpcDuelHpBar" isOpen="false" spawnPointID="102" />
			<transition state="FailRoundDelay"/>
		</condition>

		<condition name="!유저를감지했으면" arg1="904" >
			<!-- <action name="이벤트UI를설정한다" arg1="1" arg2="패배했습니다. 전투가 종료됩니다." arg3="3000" /> -->
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_switchon" script="$83000002_COLOSSEUM__ROUND2__7$" duration="3000" />				
			<action name="몬스터소멸시킨다" arg1="102" />
			<action name="SetNpcDuelHpBar" isOpen="false" spawnPointID="102" />
			<transition state="FailRoundDelay"/>
		</condition>		

	</state>
	
	<state name="ClearRoundDelay">
		<onEnter>
			<action name="LockMyPC" isLock="1" />
			<action name="사운드를설정한다" arg1="12000" arg2="1" />
			<action name="사운드를설정한다" arg1="12001" arg2="1" />
		</onEnter>
		<condition name="WaitTick" waitTick="2000" >
			<action name="버프를걸어준다" arg1="904" arg2="69000503" arg3="1" arg4="0" arg5="0"/>
			<action name="이벤트UI를설정한다" arg1="3" arg2="$83000002_COLOSSEUM__ROUND2__8$" arg3="3000" />		
			<transition state="ClearRound"/>
		</condition>
	</state>

	<state name="FailRoundDelay">
		<onEnter>
			<action name="사운드를설정한다" arg1="13000" arg2="1" />
			<action name="사운드를설정한다" arg1="13001" arg2="1" />	
		</onEnter>
		<condition name="WaitTick" waitTick="3000" >
			<!-- <action name="버프를걸어준다" arg1="904" arg2="69000505" arg3="1" arg4="0" arg5="0"/> -->
			<action name="이벤트UI를설정한다" arg1="5" arg2="$83000002_COLOSSEUM__ROUND2__9$" arg3="3000" />			
			<transition state="FailRound"/>
		</condition>
	</state>	

	<state name="ClearRound">
		<onEnter>	
			<!-- <action name="이벤트UI를설정한다" arg1="7" arg2="SUCCESS" arg3="3000" /> -->
		</onEnter>
		<condition name="WaitTick" waitTick="3000" >
			<action name="MoveUserToPos" pos="300,-225,1500" rot="0,0,270" />
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_normal" script="$83000002_COLOSSEUM__ROUND2__10$" duration="3000" />				
			<action name="SetUserValue" triggerID="900001" key="StartRound2" value="2" />
			<transition state="이동대기"/>
		</condition>
	</state>
	
	<state name="이동대기">
		<onEnter>
		</onEnter>
		<condition name="WaitTick" waitTick="1000" >
			<action name="유저를경로이동시킨다" arg1="MS2PatrolData_01" />
			<transition state="대기"/>
		</condition>
	</state>

	<state name="FailRound">
		<onEnter>
		</onEnter>
		<condition name="WaitTick" waitTick="3000" >		
			<action name="SetUserValue" triggerID="900001" key="StartRound2" value="3" />		
			<transition state="대기"/>
		</condition>
	</state>

</ms2>


<ms2>
	<!-- 2라운드 스타츠 -->
	<state name="대기">            
		<onEnter>
			<action name="사운드를설정한다" arg1="11000" arg2="0" />
			<action name="사운드를설정한다" arg1="11001" arg2="0" />
			<action name="사운드를설정한다" arg1="12000" arg2="0" />
			<action name="사운드를설정한다" arg1="12001" arg2="0" />
			<action name="사운드를설정한다" arg1="13000" arg2="0" />
			<action name="사운드를설정한다" arg1="13001" arg2="0" />	
		</onEnter>
		<condition name="UserValue" key="StartRound2" value="1">
			<transition state="시작딜레이"/>
		</condition> 
	</state>
	
	<state name="시작딜레이">              
		<onEnter>
		</onEnter>
		<condition name="WaitTick" waitTick="1000" >		
			<transition state="라운드조건체크"/>
		</condition>
	</state>

	<state name="라운드조건체크">
		<onEnter> 
		</onEnter>
		<condition name="DungeonRoundRequire" round="2" >
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_normal" script="$83000002_COLOSSEUM__ROUND2__0$" duration="5000" />				
			<!-- <action name="이벤트UI를설정한다" arg1="1" arg2="전투에서 승리하셨습니다. 잠시만 기다려주세요 다음전투가 기다리고 있습니다!!" arg3="3000" /> -->
			<transition state="라운드대기"/> 
		</condition>
		
		<condition name="True" >
			<action name="SideNpcTalk" type="talk" npcID="11004288" illust="nagi_switchon" script="$83000002_COLOSSEUM__ROUND2__1$" duration="3000" />							
			<action name="DebugString" string="던전 요구 아이템 점수를 달성 못해 실패 처리 됩니다." />
			<transition state="FailRound"/> 
		</condition> 
	</state>

	<state name="라운드대기">
		<onEnter>
			<action name="사운드를설정한다" arg1="11000" arg2="1" />
			<action name="사운드를설정한다" arg1="11001" arg2="1" />		
		</onEnter>		
		<condition name="WaitTick" waitTick="5000" >
            <action name="SideNpcTalk" type="cutin" illust="Startz_normal" duration="3000"/>
			<action name="ShowRoundUI" isFinalRound="" round="2" duration="3000" />			
			<transition state="몬스터스폰대기"/> 
		</condition>
	</state>	

	<state name="몬스터스폰대기">
		<onEnter> 
		</onEnter>
		
		<condition name="WaitTick" waitTick="1000" >		
			<transition state="몬스터스폰"/> 
		</condition>
	</state>

	<state name="몬스터스폰">      
		<onEnter>
			<action name="몬스터를생성한다" arg1="102" arg2="0" />
			<action name="버프를걸어준다" arg1="102" arg2="69000501" arg3="1" arg4="1" />
		</onEnter>
		<condition name="WaitTick" waitTick="3000" >		
			<transition state="카운트"/> 
		</condition> 
	</state>	
	
	<state name="카운트">
		<onEnter>
			<action name="ShowCountUI" text="$83000002_COLOSSEUM__ROUND2__2$" count="3" soundType="2" />
		</onEnter>
		<condition name="WaitTick" waitTick="3500" > 
			<transition state="전투시작"/> 
		</condition>
	</state>
	

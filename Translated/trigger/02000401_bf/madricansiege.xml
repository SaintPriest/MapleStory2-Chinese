<ms2>
	<state name="대기">
		<onEnter>	
			<action name="AGENT를설정한다" arg1="8001,8002,8003,8004,8005,8006" arg2="1" /> 		
			<action name="AGENT를설정한다" arg1="8101,8102,8103,8104,8105,8106" arg2="1" /> 				

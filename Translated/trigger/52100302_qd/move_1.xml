<?xml version="1.0" encoding="utf-8"?>
<!-- 멜로디 패턴 따라서 연주하기 -->
<ms2>

	<state name="대기">              
		<onEnter>
		</onEnter>
		<condition name="UserValue" key="Archeon1" value="1">
			<action name="SetUserValue" triggerID="900007" key="Archeon1" value="0"/>		
			<transition state="Archeon_Ready"/>
		</condition> 
	</state>
			
	<state name="Archeon_Ready">              
		<onEnter>
		</onEnter>
		<condition name="CheckAnyUserAdditionalEffect" triggerBoxID="10001" additionalEffectID="73000005" level="1" >
			<!-- <action name="유저를경로이동시킨다" arg1="MS2PatrolData_01" /> -->
			<action name="MoveUserToPos" pos="8700, -4800, 2750" rot="0,0,0" />
			<transition state="Archeon_On"/>
		</condition> 
	</state>	
	
	<state name="Archeon_On">                
		<onEnter>
		</onEnter>
		<condition name="WaitTick" waitTick="1000" >
				<transition state="대기"/>
		</condition>
	</state>

	
</ms2>

		</onEnter>	
		<condition name="WaitTick" waitTick="4000" > 
			<transition state="start_03" />
		</condition>
    </state>
	
	<state name="start_03"> 
        <onEnter>
			<action name="SetNpcEmotionLoop" arg1="103" arg2="Talk_A" arg3="3000"/>	

			<action name="NPC를이동시킨다" arg1="101" arg2="MS2PatrolData_2003" /> <!-- 연출용 틴차이 이동 -->		
		</onEnter>	
		<condition name="WaitTick" waitTick="1000" > 
			<transition state="start_06" />
		</condition>
    </state>
	
	<state name="start_06"> 
        <onEnter>
			<action name="유저를경로이동시킨다" arg1="MS2PatrolData_2003" />  <!-- 유저를 이동시킨다 -->

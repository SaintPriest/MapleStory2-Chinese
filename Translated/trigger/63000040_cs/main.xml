		<condition name="퀘스트유저를감지하면" arg1="701" arg2="40002652" arg3="2" >   
			<transition state="start_02_ready"/>
		</condition>
		
		<condition name="퀘스트유저를감지하면" arg1="701" arg2="40002652" arg3="1" >   
			<transition state="start"/>
		</condition>
    </state> 
	

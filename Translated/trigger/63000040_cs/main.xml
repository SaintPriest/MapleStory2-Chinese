		<condition name="WaitTick" waitTick="6000" > 
			<transition state="start_04" />
		</condition>
    </state>

	<state name="start_04"> 
        <onEnter>

			<action name="NPC를이동시킨다" arg1="103" arg2="MS2PatrolData_2003" /> <!-- 연출용 틴차이 이동 -->		
		</onEnter>	
		<condition name="WaitTick" waitTick="1000" > 
			<transition state="start_05" />
		</condition>
    </state>
	
	
	<state name="start_05"> 

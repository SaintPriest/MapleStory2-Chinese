<ms2>

	<state name="연출01">
        <onEnter>
			
		</onEnter>
		
		<condition name="CheckUser" >
			<action name="VisibleMyPC" isVisible="0"/>	<!-- 유저 투명 처리 -->	
			<action name="메쉬애니를설정한다" arg1="9002" arg2="0" arg3="0" arg4="0"/>				

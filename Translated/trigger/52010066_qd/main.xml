		</condition>	
		
    </state>
	

	<state name="연출02">
        <onEnter> 	
			<action name="SetOnetimeEffect" id="3" enable="0" path="BG/Common/ScreenMask/Eff_CameraMasking_FastFadeIn.xml"/>					
		</onEnter>
		
			<condition name="WaitTick" waitTick="4000">
				<transition state="연출03"/>
			</condition>	
		
    </state>	
	
	<state name="연출03">
        <onEnter> 	

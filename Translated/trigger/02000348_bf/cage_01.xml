<?xml version="1.0" encoding="utf-8"?>

<ms2>

  <state name="idle">
    <onEnter>
		<action name="메쉬를설정한다" arg1="2101" arg2="0" arg3="0" arg4="10" />
		<action name="이펙트를설정한다" arg1 = "8001" arg2="0" />
		<action name="액터를설정한다" arg1="2201" arg2="0" arg3="Sit_Ground_Idle_A" />
     </onEnter>
			<condition name="UserValue" key="cage_01" value="1">
			<transition state="ready"/>
		</condition> 						
    <onExit>
    </onExit>
  </state>   
    
   <state name="ready">
    <onEnter>
		<action name="메쉬를설정한다" arg1="2101" arg2="1" arg3="0" arg4="0" />
		<action name="이펙트를설정한다" arg1 = "8001" arg2="1" />
		<action name="액터를설정한다" arg1="2201" arg2="1" arg3="Sit_Ground_Idle_A" />
    </onEnter>
		<condition name="몬스터가죽어있으면" arg1="211">
            <transition state="npc" />
        </condition>				
    <onExit>
    </onExit>
  </state>   
  
   <state name="npc">
    <onEnter>
		<action name="이펙트를설정한다" arg1 = "8001" arg2="0" />
		<action name="메쉬를설정한다" arg1="2101" arg2="0" arg3="0" arg4="10" />
		<action name="액터를설정한다" arg1="2201" arg2="0" arg3="Dead_A" />
		<action name="몬스터를생성한다" arg1="221" arg2="1" />
    </onEnter>	
		<condition name="WaitTick" waitTick="3000" > 
			<transition state="NPC소멸"/>
		</condition>
    <onExit>
    </onExit>
  </state>  
  
  <state name="NPC소멸">
    <onEnter>
		<action name="몬스터소멸시킨다" arg1="221"/>
    </onEnter>	
    <onExit>
    </onExit>
  </state>  
</ms2>

	<state name="목요일">
		<onEnter>            
		</onEnter>               
		<condition name="!DayOfWeek" dayOfWeeks="5" desc="1(일)-7(토)">
			<transition state="대기"/>
			<!-- 다음날이면 다시 체크 -->
		</condition>   	
		<onExit>
		</onExit>
	</state> 

	<state name="금요일">
		<onEnter>            
		</onEnter>               
		<condition name="!DayOfWeek" dayOfWeeks="6" desc="1(일)-7(토)">
			<transition state="대기"/>
			<!-- 다음날이면 다시 체크 -->
		</condition>   	
		<onExit>
		</onExit>
	</state> 

	<state name="토요일">
		<onEnter>            
		</onEnter>               
		<condition name="!DayOfWeek" dayOfWeeks="7" desc="1(일)-7(토)">
			<transition state="대기"/>
			<!-- 다음날이면 다시 체크 -->
		</condition>   	
		<onExit>
		</onExit>
	</state>
</ms2>
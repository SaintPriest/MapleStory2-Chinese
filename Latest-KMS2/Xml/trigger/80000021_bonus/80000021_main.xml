    <state name="입장">
        <onEnter>
			<action name="메쉬를설정한다" arg1="180-198" arg2="1" />		<!--뒷문준비 / 막힌 상태-->
			<action name="몬스터를생성한다" arg1="101,102,103,104,105" arg2="0"/>		<!-- 101-4: 용병 우르자들 / 105:연출용 핑크빈-->	

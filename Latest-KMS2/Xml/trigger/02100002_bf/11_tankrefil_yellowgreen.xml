<?xml version="1.0" encoding="utf-8"?>
<!-- 슬라임 공장 연두색 물감 탱크 상태 -->
<!-- 게이지 줄어드는 시간 15초 : 변경 가능 -->
<ms2>	
	<state name="Wait">   
        <onEnter> 	
			<action name="SetUserValue" key="ActivateTank" value="0" />		<!-- 메인 트리거에서 받는 신호 -->					
			<action name="SetUserValue" key="DungeonQuit" value="0" />		<!-- 메인 트리거에서 받는 신호 -->			
			<action name="액터를설정한다" arg1="4001" arg2="1" arg3="Interaction_tankyellowgreen_A01_100" /> <!-- Up -->					
			<action name="액터를설정한다" arg1="4101" arg2="1" arg3="Interaction_tankyellowgreen_A01_100" /> <!-- Down -->	
			<action name="이펙트를설정한다" arg1="5301" arg2="0"/> <!-- Paint_Add_Sound -->	
			<action name="이펙트를설정한다" arg1="5401" arg2="0"/> <!-- Tank_Fill_Under_Sound -->		
			<action name="이펙트를설정한다" arg1="5501" arg2="0"/> <!-- Tank_Fill_Above_Sound -->				
				</onEnter>	
				<condition name="UserValue" key="ActivateTank" value="1">
					<transition state="Gauge100"/>
				</condition> 	
    <onExit> 		
    </onExit>
    </state>

	<state name="Gauge100">   
        <onEnter> 
			<action name="SetUserValue" triggerID="101" key="Gauge" value="100" /> 		
			<action name="타이머를설정한다" arg1="100100" arg2="15" arg3="1"/>  		
			<action name="액터를설정한다" arg1="4001" arg2="1" arg3="Interaction_tankyellowgreen_A01_100" /> <!-- Up -->					
			<action name="액터를설정한다" arg1="4101" arg2="1" arg3="Interaction_tankyellowgreen_A01_100" /> <!-- Down -->		
			</onEnter>	
				<condition name="시간이경과했으면" arg1="100100">  
					<transition state="Gauge75"/>	
				</condition>		
				<condition name="DetectLiftableObject" triggerBoxIDs="2001" itemID="30000883">  <!-- 같은색 물감통이면 -->
					<transition state="Gauge100_Refil"/>
				</condition>		
				<condition name="UserValue" key="DungeonQuit" value="1">
					<transition state="Quit"/>
				</condition> 					
    <onExit> 	
    </onExit>
    </state>	

	<state name="Gauge100_Refil">   
        <onEnter> 
			<action name="이펙트를설정한다" arg1="5301" arg2="1"/> <!-- Paint_Add_Sound -->	
			<action name="이펙트를설정한다" arg1="5401" arg2="1"/> <!-- Tank_Fill_Under_Sound -->		
			<action name="이펙트를설정한다" arg1="5501" arg2="1"/> <!-- Tank_Fill_Above_Sound -->				
			<action name="타이머를초기화한다" arg1="100100"/>  
			</onEnter>	
				<condition name="WaitTick" waitTick="2000">  
					<transition state="Gauge100"/>
				</condition>									
    <onExit> 	
    </onExit>
    </state>	
	
	<state name="Gauge75">   
        <onEnter> 

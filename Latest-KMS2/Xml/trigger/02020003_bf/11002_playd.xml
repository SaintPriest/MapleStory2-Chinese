<?xml version="1.0" encoding="utf-8"?>
<ms2>
    <state name="Wait" >
        <onEnter>	
		<action name="SetUserValue" key="PlayD" value="0" />		
        </onEnter>
		<condition name="UserValue" key="PlayD" value="1">	
			<transition state="ActorOff"/>
		</condition>	
        <onExit>				
        </onExit>	
    </state>
	
	<state name="ActorOff">
        <onEnter>	
		<action name="액터를설정한다" arg1="11002" arg2="1" arg3="ks_quest_musical_B01_off" /> <!-- Bell D --> 		
        </onEnter>	
		<condition name="오브젝트가반응했으면" arg1="12000059" arg2="0"> <!-- Bell D --> 		
			<transition state="ActorOn"/>
		</condition>	
		<condition name="UserValue" key="PlayD" value="0">	
			<transition state="ResetDelay"/>
		</condition>			
        <onExit>				
        </onExit>			
    </state>	
	
	<state name="ActorOn" >
        <onEnter>	
		<action name="액터를설정한다" arg1="11002" arg2="1" arg3="ks_quest_musical_B01_orange" /> <!-- Bell D --> 
        </onEnter>	
		<condition name="WaitTick" waitTick="700">
			<transition state="ResetDelay"/>
		</condition>
		<condition name="UserValue" key="PlayD" value="0">	
			<transition state="ResetDelay"/>
		</condition>			
        <onExit>				
        </onExit>			
    </state>	
	
    <state name="ResetDelay">	
        <onEnter>	
		<action name="액터를설정한다" arg1="11002" arg2="1" arg3="ks_quest_musical_B01_off" /> <!-- Bell D --> 			
        </onEnter>
		<condition name="WaitTick" waitTick="300"> 	
			<transition state="ActorOff"/>	
		</condition>	
		<condition name="UserValue" key="PlayD" value="0">	
			<transition state="Wait"/>
		</condition>		
        <onExit>
        </onExit>
    </state>	
</ms2>

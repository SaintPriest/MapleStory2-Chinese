<?xml version="1.0" encoding="utf-8"?>
	
<ms2>

	<state name="대기"> 
		<onEnter>
			<action name="DungeonVariable" varID="801" value="0" />
			<action name="DungeonVariable" varID="802" value="0" />
			<action name="DungeonVariable" varID="803" value="0" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="UserValue" key="Start" value="1" >
			<transition state="시작" />
		</condition>
	</state>

	<state name="시작"> 
		<onEnter>
			<action name="타이머를설정한다" arg1="2" arg2="60" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="시간이경과했으면" arg1="2" >
			<transition state="랜덤확률" />
		</condition>
	</state>

	<state name="랜덤확률"> 
		<onEnter>
			<action name="이벤트UI를설정한다" arg1="1" arg2="디버프 몬스터가 생성되었습니다.\n몬스터를 처치하면 상대팀에 디버프를 겁니다." arg3="5000" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="랜덤조건" arg1="33" >
			<transition state="A지역" />
		</condition>
		<condition name="랜덤조건" arg1="34" >
			<transition state="B지역" />
		</condition>
		<condition name="랜덤조건" arg1="33" >
			<transition state="C지역" />
		</condition>
	</state>

	<state name="A지역"> 
		<onEnter>
			<action name="몬스터를생성한다" arg1="801" arg2="0" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="몬스터가죽어있으면" arg1="801" >
			<action name="이벤트UI를설정한다" arg1="1" arg2="상대팀에 이동속도 감소 디버프를 겁니다." arg3="5000" />
			<action name="DungeonVariable" varID="801" value="1" />
			<transition state="딜레이" />
		</condition>
	</state>

	<state name="B지역"> 
		<onEnter>
			<action name="몬스터를생성한다" arg1="802" arg2="0" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="몬스터가죽어있으면" arg1="802" >
			<action name="이벤트UI를설정한다" arg1="1" arg2="상대팀에 공격력 감소 디버프를 겁니다." arg3="5000" />
			<action name="DungeonVariable" varID="802" value="1" />
			<transition state="딜레이" />
		</condition>
	</state>

	<state name="C지역"> 
		<onEnter>
			<action name="몬스터를생성한다" arg1="803" arg2="0" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="몬스터가죽어있으면" arg1="803" >
			<action name="이벤트UI를설정한다" arg1="1" arg2="상대팀에 체력 감소 디버프를 겁니다." arg3="5000" />
			<action name="DungeonVariable" varID="803" value="1" />
			<transition state="딜레이" />
		</condition>
	</state>

	<state name="딜레이"> 
		<onEnter>
			<action name="타이머를설정한다" arg1="1" arg2="60" />
		</onEnter>
		<condition name="DungeonVariable" varID="2" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="DungeonVariable" varID="3" value="1">
			<transition state="종료" />		
		</condition>
		<condition name="시간이경과했으면" arg1="1" >
			<transition state="대기" />
		</condition>
	</state>

	<state name="종료"> 
		<onEnter>
		</onEnter>
	</state>
	
</ms2>


<?xml version="1.0" encoding="utf-8"?>
	
<ms2>

	<state name="대기">
		<condition name="UserValue" key="summon" value="1" >
			<transition state="몬스터소환"/>
		</condition>
		<condition name="몬스터가죽어있으면" arg1="101" >
			<transition state="종료" />		
		</condition>
	</state> 

	<state name="몬스터소환">
		<onEnter>
			<action name="몬스터를생성한다" arg1="201,202,203,204" arg2="0" />
			<action name="SetUserValue" triggerID="900003" key="summon" value="2" />
		</onEnter>
		<condition name="몬스터가죽어있으면" arg1="101" >
			<transition state="종료" />		
		</condition>
		<condition name="WaitTick" waitTick="3000" >
			<transition state="대기"/>
		</condition>
  	</state>
		
	<state name="종료">
		<onEnter>
			<action name="몬스터소멸시킨다" arg1="201,202,203,204" arg2="0" />		
			<action name="SetUserValue" triggerID="900003" key="summon" value="2" />
		</onEnter>
		<condition name="무조건" >
			<transition state="대기" />				
		</condition>
	</state>	
	
</ms2>


<?xml version="1.0" encoding="utf-8"?>
<!-- MobSpawn 트리거 : 페리온 오지 -->
<ms2>
	<state name="Wait">   
        <onEnter> 
			<action name="SetUserValue" key="RemoveAll" value="0" />			
			<action name="몬스터소멸시킨다" arg1="304" />					
			</onEnter>	
			<condition name="CheckUser">
					<transition state="MobSpawn"/>	
				</condition>		
    <onExit> 
    </onExit>	
    </state>	

	<state name="MobSpawn">   
        <onEnter> 	
			<action name="몬스터를생성한다" arg1="304" arg2="0" /> 	
			</onEnter>	
				<condition name="몬스터가죽어있으면" arg1="304">  
					<transition state="Delay01"/>	
				</condition>		
			<condition name="UserValue" key="RemoveAll" value="1">
			<transition state="Quit"/>
		</condition> 					
    <onExit> 
    </onExit>
    </state>	
		
	<state name="Delay01">   
        <onEnter> 			
			</onEnter>	
				<condition name="WaitTick" waitTick="45000">	<!-- 리스폰 딜레이300 --> 
					<transition state="MobSpawn"/>	
				</condition>								
    <onExit> 
    </onExit>
    </state>		
		
	<state name="Quit">   
        <onEnter> 	
			<action name="몬스터소멸시킨다" arg1="304"/> 	
			</onEnter>					
    <onExit> 
    </onExit>
    </state>		
</ms2>